<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="204dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="14dp"
    android:background="#bbffffff">
    <ImageView
        android:id="@+id/iv_country_wares"
        android:layout_width="125dp"
        android:layout_height="94dp"
        android:layout_marginTop="17dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/sy_naifen"/>
    <TextView
        android:id="@+id/tv_country_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品简介商品简介商品简介商品简介商品简介商品简介商品商品简介商品商品简介商品商品简介商品"
        android:textSize="9sp"
        android:lines="2"
        android:ellipsize="end"
        android:layout_below="@id/iv_country_wares"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="11dp"
        android:paddingBottom="3dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/tv_country_wares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="韩国智纯发膜11111111111111111111111111111111111111111111111111"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:layout_below="@id/tv_country_intro"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tv_country_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="12dp"
        android:text="￥118"
        android:textSize="14sp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/sy_car"/>
</RelativeLayout>