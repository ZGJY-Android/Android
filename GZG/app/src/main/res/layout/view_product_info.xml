<?xml version="1.0" encoding="UTF-8"?>
<com.jy.gzg.ui.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/product_scrollview"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/white"
                            android:fadeScrollbars="true"
                            android:fillViewport="true"
                            android:focusable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 这是上边的轮播图 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_viewPager"
                android:layout_width="match_parent"
                android:layout_height="352dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:id="@+id/line_viewGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="23dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#39a3cf"
                android:padding="2dp"
                android:text="全球购"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="            乱七八糟乱七八糟乱七八糟乱七八糟乱七八糟乱七八糟乱七八糟乱七八糟乱七八糟乱七八糟"
                android:textSize="15sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tv_str1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="#8f8e8e"
                android:textSize="15sp"/>

            <RelativeLayout
                android:id="@+id/relat_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_str1">

                <TextView
                    android:id="@+id/tv_str2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥650"
                    android:textColor="#b53232"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_str3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_str2"
                    android:text="(15件起批)"
                    android:textColor="#8f8e8e"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_str2"
                    android:layout_marginTop="5dp"
                    android:background="#b53232"
                    android:text="手机专享价"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp">

            <TextView
                android:id="@+id/tv_str1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="配送"
                android:textColor="#8f8e8e"
                android:textSize="15sp"/>

            <Spinner
                android:id="@+id/plin_city"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_str1_1"
                android:background="@drawable/shape_xstm_bck"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/plin_city"
                android:text="配送时间查询"
                android:textColor="#1369c0"
                android:textSize="13sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp">

            <TextView
                android:id="@+id/tv_str2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="运费"
                android:textColor="#8f8e8e"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_str2_1"
                android:text="单笔订单不满399元,在线支付运费15元"
                android:textColor="#313131"
                android:textSize="13sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp">

            <TextView
                android:id="@+id/tv_str3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="数量"
                android:textColor="#8f8e8e"
                android:textSize="15sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_str3_1"
                android:background="@drawable/shape_huise_bck">

                <TextView
                    android:id="@+id/tv_reduce"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="#eeeeee"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#313131"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_reduce"
                    android:text="1"
                    android:textColor="#313131"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_count"
                    android:background="#eeeeee"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#313131"
                    android:textSize="13sp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp">

            <TextView
                android:id="@+id/tv_str4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="规格"
                android:textColor="#8f8e8e"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="148dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_str4_1"
                android:background="@drawable/shape_red_bck"
                android:gravity="center"
                android:text="经典款"
                android:textColor="#313131"
                android:textSize="13sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="22dp"
            android:background="#f2f2f2">

            <TextView
                android:id="@+id/tv_str5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/duigou"
                android:drawablePadding="4dp"
                android:text="中港全球购发货售后"
                android:textColor="#8f8e8e"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_str5_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/tv_str5_1"
                android:drawableLeft="@mipmap/duigou"
                android:drawablePadding="4dp"
                android:text="正品保证"
                android:textColor="#8f8e8e"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_str5_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/tv_str5_2"
                android:drawableLeft="@mipmap/duigou"
                android:drawablePadding="4dp"
                android:text="支持货到付款"
                android:textColor="#8f8e8e"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_str5_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_str5_1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:drawableLeft="@mipmap/gantanhao"
                android:drawablePadding="4dp"
                android:text="支持货到付款"
                android:textColor="#8f8e8e"
                android:textSize="12sp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="∧上拉查看图文详情"/>
    </LinearLayout>
</com.jy.gzg.ui.MyScrollView>